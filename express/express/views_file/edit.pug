doctype html
html
	head
		meta(charset='utf-8')
	body
		h1 
			a(href='/topic_sql') Server Side Javascript
		article
			if topic
				form(action='/topic_sql/'+topic.id+'/edit' method='post')
					p
						input(type='text' name='title' 	placeholder='title' value=topic.title)
					p
						input(type='text' name='author' placeholder='author' value=topic.author)
					p
						textarea(name='description')= topic.description 
					p
						input(type='submit')
